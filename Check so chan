package Javacore;

public class Vidu1 {
    //1. Viết method CheckOrderNumber nhận vào một số sau đó kiểm tra số đó có phải là số chẵn hay không?
    public static void main(String[] args) {
        boolean result = CheckOrderNumber();
        System.out.println(result);
    }
    public static boolean CheckOrderNumber (){
        int a = 7;
        boolean check = (a%2==0);
        return check;
    }
}
